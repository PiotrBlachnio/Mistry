{
  "name": "node-api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start:dev": "cross-env APP_MODE=development concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "start:prod": "cross-env APP_MODE=production node dist/index.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "cross-env APP_MODE=testing jest --testTimeout=25000 --detectOpenHandles --forceExit __tests__/",
    "test:e2e": "cross-env APP_MODE=testing jest --testTimeout=25000 --detectOpenHandles --forceExit e2e/",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PiotrBlachnio/Node-API-Romin.git"
  },
  "author": "Piotr Blachnio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PiotrBlachnio/Node-API-Romin/issues"
  },
  "homepage": "https://github.com/PiotrBlachnio/Node-API-Romin#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.3.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "swagger-ui-express": "^4.1.6",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.20",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.17.0",
    "faker": "^5.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
